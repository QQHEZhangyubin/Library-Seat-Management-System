<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_titlee"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="发布动态"/>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:layout_below="@id/toolbar_titlee"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:paddingLeft="5dp"
        android:gravity="left|top"
        android:hint="我们都是还说真话的好孩纸..."
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_stroke_gray_99" />
    <Button
        android:id="@+id/btn_evluate"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/editText"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_bg"
        android:text="发表"
        android:textColor="@color/white"
        />
    <View
        android:id="@+id/ooooooo"
        android:layout_below="@id/btn_evluate"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9e9e9e"
        />
    <GridView
        android:layout_below="@id/ooooooo"
        android:paddingTop="2dp"
        android:id="@+id/iv_addphoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/space_size"
        android:numColumns="3"
        android:verticalSpacing="@dimen/space_size" />
</RelativeLayout>