<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all_bg"
    android:gravity="center_vertical"
    tools:context="com.example.a13608.tab01.avtivity.YiJianActivity">
    <com.example.a13608.tab01.View.RoundImageView
        android:layout_gravity="center"
        android:src="@drawable/thans"
        app:radius="20dp"
        app:type="round"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <EditText
        android:padding="10dp"
        android:id="@+id/et_opinion"
        android:hint="@string/fankuiyijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/sunmit_opinion"
        android:background="@drawable/button_bg"
        android:text="提交"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
</LinearLayout>
